# Configurações do Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Configurações do PostgreSQL (EvolutionAPI)
POSTGRES_DB=evolution
POSTGRES_USER=user
POSTGRES_PASSWORD=pass

# Configurações da EvolutionAPI (uso no app/clients)
# OBS: não versionar sua chave real em repositório público
EVOLUTION_API_KEY="chave-da-api-aqui"
EVOLUTION_API_URL="http://localhost:8080"
EVOLUTION_INSTANCE="dopacheck"

# Provider para EvolutionAPI: postgresql | mysql
DATABASE_PROVIDER=postgresql
DATABASE_CONNECTION_URI='postgresql://user:pass@postgres:5432/evolution?schema=public'
DATABASE_CONNECTION_CLIENT_NAME=evolution_exchange

# Configurações de cache do Redis para EvolutionAPI
CACHE_REDIS_ENABLED=true
# Por padrão agora usamos o Redis do próprio docker-compose.whatsapp.yml (sem expor porta no host).
# Se for Redis remoto: redis://10.0.0.10:6379
# Se tiver senha: redis://:SENHA@host:6379
CACHE_REDIS_URI=redis://redis:6379
CACHE_REDIS_TTL=604800
CACHE_REDIS_PREFIX_KEY=evolution-cache
CACHE_REDIS_SAVE_INSTANCES=true

# Cache local (fallback)
CACHE_LOCAL_ENABLED=true
CACHE_LOCAL_TTL=86400

# Webhook (Laravel pronto)
# Se o Laravel estiver rodando NO HOST (ex: http://localhost:8000), use host.docker.internal:
WEBHOOK_URL=http://host.docker.internal:8000/webhook/whatsapp
# Se o Laravel estiver em container na mesma rede, você pode usar:
# WEBHOOK_URL=http://dopacheck_app:8000/webhook/whatsapp
WEBHOOK_ENABLED=true
WEBHOOK_EVENTS_MESSAGES_UPSERT=true

# Alinhamento com o .env.example oficial (opcional)
SERVER_URL=http://localhost:8080
LANGUAGE=pt-BR
# IMPORTANTE: LOG_LEVEL no Laravel deve ser um valor único (ex: debug/info/warning/error).
# Para a EvolutionAPI use EVOLUTION_LOG_LEVEL:
EVOLUTION_LOG_LEVEL=ERROR,WARN,DEBUG,INFO,LOG,VERBOSE,DARK,WEBHOOKS,WEBSOCKET

# Timezone
TZ=America/Sao_Paulo

